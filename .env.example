# Target URL for cross-promotion CTA inside generated posts.
SERVICE_A_URL=https://example.com
SERVICE_A_NAME=Service A

# Comma-separated cron expressions for autopilot mode.
# Defaults: 3 runs/day at 09:00, 13:00, 19:00 KST.
CRON_EXPRESSIONS=0 9 * * *,0 13 * * *,0 19 * * *
TIMEZONE=Asia/Seoul

# Posting controls
POSTS_PER_DAY=3
POSTS_PER_RUN=1
SOURCE_LIMIT=80
TOPIC_COOLDOWN_HOURS=36

